    <description>Konwertuje rekord kandydata na kontakt w wybranym koncie</description>
    <formulas>
        <name>FirstNameFormula</name>
        <dataType>String</dataType>
        <expression>IF(
            CONTAINS({!Candidate_Record.Name}, " "),
            LEFT({!Candidate_Record.Name}, FIND(" ", {!Candidate_Record.Name}) - 1),
            {!Candidate_Record.Name}
        )</expression>
    </formulas>
    <formulas>
        <name>LastNameFormula</name>
        <dataType>String</dataType>
        <expression>IF(
            CONTAINS({!Candidate_Record.Name}, " "),
            RIGHT({!Candidate_Record.Name}, LEN({!Candidate_Record.Name}) - FIND(" ", {!Candidate_Record.Name})),
            "[Brak nazwiska]"
        )</expression>
    </formulas>
